	}

	.story__logo img,
	.story__logo svg {
	  height: 20px;
	  width: auto;
	}

	.story__image {
	  width: 100%;
	  display: block;
	}

	.story__image--with-background {
	  height: 100%;
	  width: 100%;
	  position: absolute;
	  left: 0;
	  top: 0;
	  max-width: initial;
	  background-repeat: no-repeat;
	  background-position: 50% 50%;
	  background-size: cover;
	  position: relative;
	  mask: linear-gradient(
		to right,
		rgba(0, 0, 0, 1) 26.9841%,
		rgba(0, 0, 0, 0) 100%,
		transparent
	  );
	}

	.story__content {
	  overflow: hidden;
	  padding: 20px;
	  display: flex;
	  flex-direction: column;
	  justify-content: center;
	}

	.story__content.full-width {
	  width: 90%;
	}

	.story__columns {
	  flex: 0 1 auto;
	  display: flex;
	  flex-direction: column;
	}

	.story__columns .story__column.story__column--first {
	  flex: 0 0 auto;
	}

	.story__columns .story__column.story__column--second {
	  flex: 1 1 auto;
	  display: flex;
	  flex-direction: column;
	}

	.story__header {
	  line-height: 1.2em;
	  margin-top: 0;
	}

	.story__header ~ .story__meta,
	.story__header ~ .story__image {
	  display: none;
	}

	.story__summary {
	  flex: 1 1 auto;
	  line-height: 1.3;
	  overflow: hidden;
	}

	.story__summary--long {
