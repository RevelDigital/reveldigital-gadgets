<?xml version="1.0" encoding="UTF-8" ?> 
<Module> 
<ModulePrefs title="RevelDigital QR Control Test" description="Control digital signage with QR code." author="RevelDigital" background="transparent">
  <UserPref name="api_key" display_name="API Key" datatype="string" default_value="null" required="true" />
  <UserPref name="reg_key" display_name="REG Key" datatype="string" default_value="null" required="true" />
</ModulePrefs>
<Content type="html">
<![CDATA[

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.2.6/jquery.min.js" type="text/javascript" charset="utf-8"></script>

<style type="text/css">

#imageview {
    width: 100%;
    height: 100%;
    font-size: 200%;
    text-align:center;
}

</style>


<script type="text/javascript" charset="utf-8">



//startup waiting for message from server
$(function() {
    var prefs = new gadgets.Prefs();
    console.log("Version bravo: " + 50);
    getDevicebyRegKey(prefs.getString('reg_key'));
});


function getDevicebyRegKey(regKey) {
    var image = $.getJSON("http://api.reveldigital.com/devices.json?api_key=" + prefs.getString('api_key'), function (data) {
      
        for(var i=0; i < data.length; i++) {
            var currentDevice = data[i];
            if(currentDevice.registration_key == regKey) {
                waitForMsg(currentDevice.id);
            }
        }

    });
}


//show image from source given by server
function showImage(image) {
    if(image.length == 0) {
        $("#imageview").html("Nothing is queued for playback.");
    }
    else {
        $("#imageview").html("You have queued " + image + " for playback!");    
    }
    
}


//wait for a message from the server
//if success or error still try pinging the server for data
function waitForMsg(device){

    $.ajax({
        type: "GET",
        url: "http://www.lumisnet.com/msgsrv.php?device=" + device,
        crossDomain: true,
        async: true,
        cache: false,
        timeout:5000, 
        success: function(data){ 
            showImage($.trim(data))
            setTimeout(
                waitForMsg(device), 
                5000 
            );
        },
        error: function(XMLHttpRequest, textStatus, errorThrown){
            setTimeout(
                waitForMsg(device),
                5000
            ); 
        }
    });
};


</script>







<body>
    <div id="imageview">
    </div>
</body>



]]>
</Content>
</Module>