                            if (response.data.results[i].product.name != "" && response.data.results[i].amount.actual > myMinQty) {
                                (document.getElementById("itemListList").innerHTML += "<tr><td>" + response.data.results[i].product.name + "</td><td>"
                                    + formatter.format(response.data.results[i].averagePurchasePrice) + "</td></tr>");}}})
                    .catch(err => console.error(err));
            }
        }
    }

    sleep(5000);

    function brandBool() {
        sleep(5000);
        console.log("Testing : Slept, Running brandBool");
        if (__UP_myBoolBrandPref__ === false) {
            var table = document.getElementById('itemListList');
            for (var i = 0; i < table.rows.length; i++) {
                var firstCol = table.rows[i].cells[0];
                arr = firstCol.innerHTML.split(" - ");
                arr.shift();
                firstCol.innerHTML = arr.join(" - ");
                console.log("Testing : Attempt Remove Brand Name");
            }
        }
    }
    brandBool();

    if (myUpdateInterval > 1000) { 
        setInterval(function () {
            getInv();
            brandBool();
            console.log("Stock count updated. Will update again in: " + __UP_updateInterval__ + " minutes.");
        }, myUpdateInterval);
    }

</script>]]></Content>
