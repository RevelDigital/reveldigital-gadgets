<div id="container">
  <div id="table" class="scroll">
  </div>
    <div class="lastUpdate">
    Last Updated: <span></span>
  </div>
</div>


<script type="text/javascript">
  var prefs = new gadgets.Prefs();

  function load() {
      
    WebFont.load({
      google: {
        families: [
          RevelDigital.getFamilyName(prefs.getString("header-style"))
        ]
      }
    });
    WebFont.load({
      google: {
        families: [
          RevelDigital.getFamilyName(prefs.getString("body-style"))
        ]
      }
    });
    
    google.load('visualization', '1', {'packages': ['table']});
    google.setOnLoadCallback(initialize);
  }

  gadgets.util.registerOnLoadHandler(load);
</script>

<script type="text/javascript">
  var container;
  var table;
  var dep = (prefs.getString("boardType") == "dep");
  
  function initialize() {
    container = document.getElementById("table");
    table = new google.visualization.Table(container);

    update();

    setInterval(update, 1000 * 60 * 10); // 10 min update
  }
  
  function update() {
  
    var now;
    if (typeof Client != "undefined" && typeof(Client.getDeviceTime) == "function") {
      now = moment(Client.getDeviceTime());
    } else {
      now = moment();
    }
    
    $('.lastUpdate span').text(now.format("LT"));
    
    $.ajax({
      url: "https://api.flightstats.com/flex/flightstatus/rest/v2/jsonp/airport/status/FAR/" + (dep ? "dep" : "arr") + "/" + now.year() + "/" + (now.month()+1) + "/" + now.date() + "/" + now.hour() + "?appId=27a8b478&appKey=b725f70889570f69748fa69f783be1fe&utc=false&numHours=6&maxFlights=20&extendedOptions=useInlinedReferences&callback=?",
      type: "GET",
      dataType: "jsonp",
      success: function (data) {
        draw(data);
      }
    });
  }
  
  function getAirlineByCode(name, flightNumber, codeshares) {

    if (codeshares == null) {
      return name;
    }
    $.each(codeshares, function (i, el) {
      if (el.relationship == "S" && flightNumber == el.flightNumber) {
        name = el.carrier.name;
      }
    });
    
    return name;
  }
  
  function getStatusByCode(code) {
    switch (code) {
      case 'A':
        return 'Active';
      case 'C':
        return 'Cancelled';
      case 'D':
        return 'Diverted';
      case 'DN':
        return 'Data source needed';
      case 'L':
        return 'Landed';
      case 'NO':
        return 'Not Operational';
      case 'R':
        return 'Redirected';
      case 'S':
        return 'Scheduled';
      default:
        return 'Unknown';
    }
  }
  
  function draw(response) {
    
    var dt = new google.visualization.DataTable();
    dt.addColumn('string', 'Airline');
    dt.addColumn('string', 'Flight Number');
    dt.addColumn('string', (dep ? 'To' : 'From'));
    dt.addColumn('string', 'Gate');
    dt.addColumn('datetime', 'Scheduled');
    dt.addColumn('string', 'Status');

    $.each(response.flightStatuses, function (i, el) {
      var gate = " - ";

      var status = getStatusByCode(el.status);
      var time = moment(dep ? el.departureDate.dateLocal : el.arrivalDate.dateLocal);
      
      if (dep) {
        if (el.airportResources) {
          if (el.airportResources.departureGate) {
            gate = el.airportResources.departureGate;
          }
        }
        if (el.status != "C" && el.status != "L" && el.operationalTimes.estimatedGateDeparture) {
          var est = moment(el.operationalTimes.estimatedGateDeparture.dateLocal);
          if (Math.abs(time.diff(est, 'minutes')) > 5) {
            status = "ETA " + est.format("LT");
          }
        }
      } else {
        if (el.airportResources) {
          if (el.airportResources.arrivalGate) {
            gate = el.airportResources.arrivalGate;
          }
        }
        if (el.status != "C" && el.status != "L" && el.operationalTimes.estimatedGateArrival) {
          var est = moment(el.operationalTimes.estimatedGateArrival.dateLocal);
          if (Math.abs(time.diff(est, 'minutes')) > 5) {
            status = "ETA " + est.format("LT");
          }
        }
      }

      dt.addRow([
        getAirlineByCode(el.carrier.name, el.flightNumber, el.codeshares),
        el.flightNumber,
        (dep ? el.arrivalAirport.name : el.departureAirport.name),
        gate,
        {v: time.toDate(), f: time.format("LT") },
        status
      ]);
    });
    
    dt.sort([{column:4}]);
    
    google.visualization.events.addListener(table, "ready",
      function (event) {
        //if (!prefs.getBool("hasTitle")) {
          //$(".header-style").remove();
        //}
        $("#container").autoScroll({
          speed: 'fast', //prefs.getString("scrollSpeed"),
          by: 'continuous' //prefs.getString("scrollBy")
        }).on("done", function() {
          $("#container").data("plugin_autoScroll").play();
        });
        $("#container").data("plugin_autoScroll").play();
      }
    );
    
    google.visualization.events.addListener(table, "sort",
      function (event) {
      }
    );
        
    table.draw(dt, { allowHtml:false, sort:'disable', cssClassNames: {
      headerRow: 'header-style',
      headerCell: 'header-style',
      tableRow: 'body-style',
      tableCell: 'body-style',
      selectedTableRow: 'body-style',
      oddTableRow: 'body-style',
      hoverTableRow: 'body-style',
      rowNumberCell: 'body-style'
    } });
  }
  
  $(document).on('click', 'table tr', function (e) {
    var json = [];
    
    $('td', this).each(function() {
      var th = $(this).closest('table').find('th').eq($(this).index());
      var o = new Object();
      o.name = $(th).html();
      o.value = $(this).html();
      json.push(o);
    });
    
    if (typeof Client != 'undefined') {
      Client.callback(JSON.stringify(json));
    }
  });
</script>
