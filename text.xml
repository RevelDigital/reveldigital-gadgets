<?xml version="1.0" encoding="UTF-8" ?> 
<Module> 
<ModulePrefs title="Lifx Light Control" description="" author="RevelDigital" background="transparent">
  <UserPref name="text" display_name="Text to Display" datatype="string" default_value="" />
  <UserPref name="header-style" display_name="Font Style" datatype="style" default_value="font-family:Verdana;color:rgb(255, 255, 255);font-size:24px;text-align:left;" required="true" />
  <UserPref name="font-name" display_name="Google Font Name" datatype="string" default_value="Droid Sans" />
  <UserPref name="ForeColor" datatype="hidden" />
  <UserPref name="BackColor" datatype="hidden" />
  <UserPref name="rdW" display_name="Width" required="true" default_value="280" datatype="hidden" />
  <UserPref name="rdH" display_name="Height" required="true" default_value="190" datatype="hidden" />
</ModulePrefs>
<Content type="html">
<![CDATA[

<style type="text/css">
body *
{
  line-height: 1.2em; 
  letter-spacing: 0; 
  word-spacing: normal;
}

body
{
  background: transparent;
  width: __UP_rdW__px;
  height: __UP_rdH__px;
  overflow: hidden;
}

span
{
  __UP_header-style__;
  font-family: __UP_font-name__, sans-serif !important;
}
</style>

<script src="https://ajax.googleapis.com/ajax/libs/webfont/1.5.18/webfont.js"></script>

<span id="container"></span>

<script type="text/javascript">

  var prefs = new gadgets.Prefs();

  function load() {
    WebFont.load({
      google: {
        families: [ prefs.getString("font-name") ]
      }
    });
    
    $("#container").text(prefs.getString("text"));
  }

  gadgets.util.registerOnLoadHandler(load);
   
</script>
]]>
</Content>
</Module>