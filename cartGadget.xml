  <script type="text/javascript">

    function load(){
     prefs = new gadgets.Prefs();
    }
    function clear() {
      window['angularComponent'].zone.run(() => {window['angularComponent'].component.clear();})
    }
    function add(json) {
      window['angularComponent'].zone.run(() => {window['angularComponent'].component.add(json);})
    }
    function balance(total) {
        if(isNaN(total)===false && total!=null) {
          window['angularComponent'].zone.run(() => {
            window['angularComponent'].component.setBalance(total);
          })
        }
    }
    function overlayOn() {
        document.getElementById("overlay").style.display = "block";
    }

    function overlayOff() {
        document.getElementById("overlay").style.display = "none";
    }
    gadgets.util.registerOnLoadHandler(load);

  </script>
